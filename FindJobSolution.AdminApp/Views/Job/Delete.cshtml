@model FindJobSolution.ViewModels.Catalog.Jobs.JobDeleteRequest

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa công việc</h1>

<h3>Bạn có chắc muốn xóa công việc này không</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input asp-for="Id" type="hidden" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a class="btn btn-success" asp-action="index" asp-controller="job">Trở lại danh sách công việc</a>
    </form>
</div>
