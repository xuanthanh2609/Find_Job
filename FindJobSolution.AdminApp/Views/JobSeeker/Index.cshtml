@using FindJobSolution.ViewModels.Common
@model PagedResult<FindJobSolution.ViewModels.Catalog.JobSeekers.JobSeekerViewModel>

@{
    ViewData["Title"] = "Danh sách người tìm việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách người tìm việc</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/home/index">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách người tìm việc</li>
    </ol>

    <div class="card mb-4">
        @*<div class="card-header">
            <a class="btn btn-success" asp-action="Create" asp-controller="User">Tạo người dùng mới</a>
        </div>*@
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Tên
                            </th>
                            <th>
                                Giới tính
                            </th>
                            <th>
                                Mức lương mong muốn
                            </th>
                            <th>
                                CV
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Items != null) 
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.jobseekerId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gender)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DesiredSalary)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ThumbnailCv)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Chi tiết", "Details", new { id=item.jobseekerId }) |
                                        @Html.ActionLink("Xóa", "Delete", new {  id=item.jobseekerId  })
                                    </td>
                                </tr>
                            }
                        }
                        
                    </tbody>
                </table>

            </div>
            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>
