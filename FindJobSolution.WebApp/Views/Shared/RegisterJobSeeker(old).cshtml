
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "RegisterJobSeeker";
}

<hr />
<form asp-action="RegisterJobSeeker">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <section>
        <div class="container pt-50 pb-40">
            <div class="row">
                <div class="col-12">
                    <h2 class="contact-title text-center">Đăng ký</h2>
                </div>
                <div class="col-lg-6 mx-auto">
                    <div class="form-contact contact_form">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Email</label>

                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group" style="height: 5px; margin-top: -15px; color:red">
                                    <label class="lable-danger">@ViewBag.DuplicateMessage</label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Mật khẩu</label>

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Xác thực mật khẩu</label>
                                    @*<input asp-for="ConfirmPassword" class="form-control" type="password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@
                                    <input type="password" class="form-control" />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Họ tên</label>

                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>SDT</label>

                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Ngành nghề</label>
                                    <div>@Html.DropDownList("MaNganhNghe", new SelectList(Model.ListNganhNghe, "Id", "TenNganhNghe"), htmlAttributes: new { @class = "form-control" })</div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <input type="submit" value="Tạo tài khoản" class="button button-contactForm boxed-btn mr-4" />
                            <lable style="font-family: Barlow">Đã có tài khoản? </lable><span class="clicklink"><a href="~/Home/LoginJobSeeker">Đăng nhập</a></span>
                        </div>
                        <hr />
                        <div clas="form-group">
                            <lable style="font-family: Barlow">Nếu bạn đang có nhu cầu tuyển dụng, ấn vào </lable><span class="clicklink"><a href="~/Home/RegisterEmployer">đây</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
