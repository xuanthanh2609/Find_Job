@model FindJobSolution.ViewModels.System.UsersJobSeeker.RegisterRequest

@{
    ViewData["Title"] = "Register";
}}

<hr />
<form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <section>
        <div class="container pt-50 pb-40">
            <div class="row">
                <div class="col-12">
                    <h2 class="contact-title text-center">Đăng ký</h2>
                </div>
                <div class="col-lg-6 mx-auto">
                    <div class="form-contact contact_form">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>UserName</label>
                                    <input asp-for="UserName" class="form-control" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Password</label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>ConfirmPassword</label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password"/>
                                </div>
                            </div>                        
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Tạo tài khoản" class="button button-contactForm boxed-btn mr-4" />
                            <lable style="font-family: Barlow">Đã có tài khoản? </lable><span class="clicklink"><a href="~/UserRecuiter/Create">Đăng nhập</a></span>
                        </div>
                        <hr />
                        <div clas="form-group">
                            <lable style="font-family: Barlow">Nếu bạn đang có nhu cầu tuyển dụng, ấn vào </lable><span class="clicklink"><a href="~/Home/IndexRecuiter">đây</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


