@using FindJobSolution.ViewModels.System.User
@model UserLoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <section>
        <div class="container pt-50 pb-40">
            <div class="row">
                <div class="col-12">
                    <h2 class="contact-title text-center">Đăng nhập</h2>
                </div>
                <div class="col-lg-6 mx-auto">
                    <div class="form-contact contact_form">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" type="text" name="UserName" asp-for="UserName" />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Mật khẩu</label>
                                    <input class="form-control" type="password" name="Password" asp-for="Password" />
                                </div>
                                <div class="form-group" style="padding-left:20px">
                                    <input class="form-check-input" asp-for="RememberMe" type="checkbox" value="" />
                                    <label class="form-check-label">Nhớ mật khẩu</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <input type="submit" value="Đăng nhập" class="button button-contactForm boxed-btn mr-4" />
                            <lable style="font-family: Barlow">Chưa có tài khoản? </lable><span class="clicklink"><a href="~/Home/RegisterJobSeeker">Đăng ký</a></span>
                        </div>
                        <hr />
                        <div clas="form-group">
                            <lable style="font-family: Barlow">Bạn là nhà tuyển dụng, ấn vào </lable><span class="clicklink"><a asp-action="Login" asp-controller="UserRecuiter">đây</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>