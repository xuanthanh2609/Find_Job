                                                    <div class="col-44">
                                                        <span>Quốc tịch</span>
                                                    </div>
                                                    <div class="col-88">
                                                        <span class="fw-6">@Html.DisplayFor(model => model.National)</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="roww">
                                        <div class="col-lg-66">
                                            <div class="roww">
                                                <div class="col-44">
                                                    <span>Giới tính</span>
                                                </div>
                                                <div class="col-88">
                                                    <span class="fw-6">@Html.DisplayFor(model => model.Gender)</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-66">
                                            <div>
                                                <div class="roww">
                                                    <div class="col-44">
                                                        <span class="undefied col-44">Ngành nghề</span>
                                                        </div>
                                                    <div class="col-88">
                                                        <span class="fw-6">@ViewBag.JobNamed</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="roww">
                                        <div class="col-lg-66">
                                            <div>
                                                <div class="roww">
                                                    <span class="undefied col-44">Lương mong muốn</span>
                                                    <div class="col-88">
                                                        <span class="fw-6" style="margin-left: -25px;">@Html.DisplayFor(model => model.DesiredSalary)$</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-66">
                                            <div>
                                                <div class="roww">
                                                    <div class="col-44">
                                                        <span>Địa chỉ</span>
                                                    </div>
                                                    <div class="col-88">
                                                        <div class="fw-6 text-truncate">@Html.DisplayFor(model => model.Address)</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="roww">
                                        <div class="col-lg-66">
                                            <div>
                                                <div class="roww">
                                                    <span class="undefied col-44">Ảnh đại diện</span>
                                                    <div class="col-88">
                                                        <img src="http://localhost:2001/@Html.DisplayFor(model => model.Avatar)" alt="image" style="width: 150px" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="roww">
                                        <div class="col-lg-66">
                                            <div>
                                                <div class="roww">
                                                    <span class="undefied col-44">CV</span>
                                                    <div class="col-88">
                                                        <img src="http://localhost:2001/@Html.DisplayFor(model => model.ThumbnailCv)" alt="image" style="width: 200px"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-left:1px">
                                        <a href="@Url.Action("UserProfileEdit", "UserJobSeeker", new {id = Model.jobseekerId})" class="btn btn-primary">Chỉnh sửa</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
