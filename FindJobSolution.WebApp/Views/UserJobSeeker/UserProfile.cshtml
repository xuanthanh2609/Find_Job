                                    <div class="roww">
                                        <div class="col-lg-66">
                                            <div class="undefied roww">
                                                <span class="undefied col-44">Tên</span>
                                                <div class="col-88 text-truncate fw-6">@Html.DisplayFor(model => model.Name)</div>
                                            </div>
                                        </div>
                                       
                                    </div>
                                    <div class="roww">
                                        <div class="col-lg-66">
                                            <div class="undefied roww">
                                                <span class="undefied col-44">Email</span>
                                                <div class="col-88 text-truncate fw-6">@Html.DisplayFor(model => model.Email)</div>
                                            </div>
                                        </div>
                                        <div class="col-lg-66">
                                            <div>
                                                <div class="roww">
                                                    <div class="col-44">
                                                        <span>Điện thoại</span>
                                                    </div>
                                                    <div class="col-88">
                                                        <span class="fw-6">@Html.DisplayFor(model => model.PhoneNumber)</span>
                                                    </div>
