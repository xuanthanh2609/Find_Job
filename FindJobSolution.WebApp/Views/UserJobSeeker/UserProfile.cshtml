                        <div>
                            <div class="ContactInfoView_viewSectionWrapper__2SQdc">
                                <div class="native-grid">
                                    <div class="roww">
                                        <div class="col-lg-66">
                                            <div class="undefied roww">
                                                <span class="undefied col-44" style="grid-column: span 5">Tên công ty</span>
                                                <div class="col-88 text-truncate fw-6">@Html.DisplayFor(model => model.CompanyName)</div>
                                            </div>
                                        </div>
                                        <div class="col-lg-66">
                                            <div>
                                                <div class="roww">
                                                    <div class="col-44" style="grid-column: span 5">
                                                        <span>Chức danh</span>
                                                    </div>
                                                    <div class="col-88 text-truncate fw-6">                                                     
                                                        @Html.DisplayFor(model => model.JobTitle)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="roww">
                                        <div class="col-lg-66">
                                            <div class="roww">
                                                <div class="col-44" style="grid-column: span 6">
                                                    <span>Thời gian làm việc</span>
                                                </div>
                                                <div class="col-88 text-truncate fw-6">
                                                    @Html.DisplayFor(model => model.WorkingTime)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="roww">
                                        <div class="undefied col-22">
                                            <div class="roww">
                                                <div class="col-44" style="grid-column: span 9">
                                                    <span>Mô tả kinh nghiệm làm việc</span>
                                                </div>
                                                <div class="col-88 text-truncate fw-6">
                                                    @Html.DisplayFor(model => model.WorkExperience)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-left:1px">
                                        <a href="@Url.Action("UserOldCompanyEdit", "UserJobSeeker" , new {id = Model.jobseekerId})" class="btn btn-primary">Chỉnh sửa</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Block_Block__1rMJ_">
                    <div class="ContactInformation_contactInformationComponent__2Rwzr">
                        <h2 class="ContactInformation_blockTitle__VfSNg">Kỹ năng cá nhân</h2>
                        <div>
                            <div class="ContactInfoView_viewSectionWrapper__2SQdc">
                                <div class="native-grid">
                                    <div class="roww">
                                        <div class="col-lg-66">
                                            <div class="undefied roww">
