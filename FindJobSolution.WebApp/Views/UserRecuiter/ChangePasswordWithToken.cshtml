@model FindJobSolution.ViewModels.System.User.ResetPasswordVM

@{
    ViewData["Title"] = "ChangePasswordWithToken";
    Layout = "~/Views/Shared/_Layout4.cshtml";
}
<form asp-action="ChangePasswordWithToken">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="grid--flexbox">
        <div class="grid--35 min-height--100vh text-align--center" style="background:#010b1d">
            <div class="container--sidebar" style="min-height:80vh; position: relative;top: 50%; transform: translateY(-50%);">
                @* <a href="~/UserEmp/Index">
                <img src="../assets/img/logo/logo_footer.png" />
                </a>*@
                <div>
                    <div class="container-slide" style="width:100% ; display: inline-block height: 70vh;align-items: center;justify-content: center; width: 100%; display: grid !important;">
                        <img src="../assets/img/hero/employer.jpg" style="width:100%" />
                    </div>
                </div>
            </div>

        </div>
        <div class="grid--65 grid--relative">
            <div class="width-percent--60 form-register-content margin--auto">
                <div class="col-12">
                    <h2 class="contact-title text-center">Đăng nhập</h2>
                </div>
                <div class="col-lg-6 mx-auto">
                    <div class="form-contact contact_form">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Token" class="control-label"></label>
                                    <input asp-for="Token" class="form-control" />
                                    <span asp-validation-for="Token" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="NewPassword" class="control-label"></label>
                                    <input asp-for="NewPassword" type="password" class="form-control" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="ConfirmNewPassword" class="control-label"></label>
                                    <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                            </div>
                            <hr />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

