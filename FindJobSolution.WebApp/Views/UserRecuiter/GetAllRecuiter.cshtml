@using FindJobSolution.ViewModels.Common
@model PagedResult<FindJobSolution.ViewModels.Catalog.Recruiters.RecruiterVM>

@{
    ViewData["Title"] = "GetAllRecuiter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <style>
        .shade {
            background-color: aqua;
        }

        .body-container {
            /*remove the container default padding  attribute*/
            padding-left: 0px !important;
            padding-right: 0px !important;
            /*increase width as per your need*/
            max-width: 100%;
        }

        .currSign:before {
            content: '$';
        }
    </style>
    <main>
        <h1>Danh sách các công ty</h1>
        <div class="job-listing-area pt-120 pb-120">
            <div class="container">
                <div class="row">
                    <!-- Left content -->
                    
                    <!-- Right content -->
                    <div class="col-xl-9 col-lg-9 col-md-8">
                        <!-- Featured_job_start -->
                        <section class="featured-job-area">
                            <div class="container">
                                <!-- Count of Job list Start -->
                                
                                <!-- Count of Job list End -->
                                @foreach (var item in Model.Items)
                                {

                                    
                                        <!-- single-job-content -->
                                        <div class="single-job-items mb-30">
                                            <div class="job-items">
                                                <div class="company-img">
                                                </div>
                                                <div class="job-tittle job-tittle2">
                                                    
                                                    <ul>
                                                        <li>@Html.DisplayFor(modelItem => item.CompanyName)</li>
                                                        <li><i class="fas fa-map-marker-alt"></i>@Html.DisplayFor(modelItem => item.Address)</li>
                                                    
                                                    </ul>
                                                <p style="font-size: 30px; margin-left: 0;">@Html.ActionLink("Chi tiết công ty", "IndexRecuiter", new { id=item.RecruiterId })</p>
                                                </div>
                                            </div>
                                            <div class="items-link items-link2 f-right">
                                            <img src="http://localhost:2001/@Html.DisplayFor(modelItem=> item.ThumbnailCv)" alt="image" style="width: 100px"></img>
                                            </div>
                                        </div>
                                }
                            </div>
                        </section>
                        <!-- Featured_job_end -->
                    </div>
                </div>
            </div>
        </div>

    </main>
    <script>
        let x = document.querySelectorAll(".myDIV");
        for (let i = 0, len = x.length; i < len; i++) {
            let num = Number(x[i].innerHTML)
                      .toLocaleString('en');
            x[i].innerHTML = num;
            x[i].classList.add("currSign");
        }
    </script>
</div>

