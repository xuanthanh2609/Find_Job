                                                        <div class="col-44">
                                                            <span>Quốc tịch</span>
                                                        </div>
                                                        <div class="col-88">
                                                            <span class="fw-6">@Html.DisplayFor(model => model.National)</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="roww">
                                            <div class="col-lg-66">
                                                <div class="roww">
                                                    <div class="col-44">
                                                        <span>Giới tính</span>
                                                    </div>
                                                    <div class="col-88">
                                                        <span class="fw-6">@Html.DisplayFor(model => model.Gender)</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="roww">
                                            <div class="undefied col-22" style="grid-column: span 8;">
                                                <div class="roww">
                                                    <span class="undefied col-44">Ngành nghề</span>
                                                    <div class="col-88">
