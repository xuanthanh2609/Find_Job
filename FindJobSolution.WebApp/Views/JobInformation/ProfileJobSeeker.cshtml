                                                        <span class="fw-6" style="margin-left: -25px;">
                                                        @nn.TenNganhNghe
                                                        </span>
                                                        }*@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="roww">
                                            <div class="undefied col-22" style="grid-column: span 8;">
                                                <div class="roww">
                                                    <span class="undefied col-44">Lương mong muốn</span>
                                                    <div class="col-88">
                                                        <span class="fw-6" style="margin-left: -25px;">@Html.DisplayFor(model => model.DesiredSalary)$</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="roww">
                                            <div class="undefied col-22">
